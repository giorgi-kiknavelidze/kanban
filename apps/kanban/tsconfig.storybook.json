{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true
  },
  "exclude": ["app/components/**/*.spec.ts", "app/components/**/*.test.ts"],
  "include": [
    "app/components/**/*.stories.ts",
    "app/components/**/*.stories.js",
